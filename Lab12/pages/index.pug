doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="icon" href="/favicon")
    script(src="https://cdn.tailwindcss.com")
    title We R Devs
  body
    // Navbar
    include ../templates/navbar.pug

    // Hero Section
    section.bg-gray-50
      div.max-w-screen-xl.mx-auto.p-4.sm
        div(class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center")
          div
            h1.text-4xl.md We Do Not Build Websites, We Build 
              span.text-red-300 Dreams
            p.text-gray-600.mt-4 We believe that ideas are what move the world, which is why we are committed to delivering innovative and disruptive software solutions with high impact on both business and society.
            div.mt-8
              a(href="/contact" class="inline-block py-3 px-10 bg-red-300 text-white font-medium rounded hover:bg-red-500") Get Started
          div
            img(src="./logo" alt="Rocket" class="w-auto h-80 mx-auto")

    // Footer
    include ../templates/footer.pug
