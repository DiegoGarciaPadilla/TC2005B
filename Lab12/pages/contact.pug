doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="icon" href="/favicon")
    script(src="https://cdn.tailwindcss.com")
    title We R Devs
  body
    // Navbar
    include ../templates/navbar.pug

    // Contact Form
    section.bg-gray-50
      .max-w-screen-xl.mx-auto.p-4
        h1.text-3xl.font-bold.text-center Contact Us
        form#contact-form.mt-8.space-y-6(method="post" action="/contact-info")
          .grid.grid-cols-1.gap-6
            div
              label.block.text-sm.font-medium.text-gray-700(for="name") Name
              input(class=".mt-1.block.w-full.rounded-md.border-gray-300.shadow-sm.focus:border-blue-300.focus:ring.focus:ring-blue-200.focus:ring-opacity-50" id="name" type="text" name="name")
            div
              label.block.text-sm.font-medium.text-gray-700(for="email") Email
              input(class=".mt-1.block.w-full.rounded-md.border-gray-300.shadow-sm.focus:border-blue-300.focus:ring.focus:ring-blue-200.focus:ring-opacity-50" id="email" type="email" name="email")
            div
              label.block.text-sm.font-medium.text-gray-700(for="phone") Phone
              input(class=".mt-1.block.w-full.rounded-md.border-gray-300.shadow-sm.focus:border-blue-300.focus:ring.focus:ring-blue-200.focus:ring-opacity-50" id="phone" type="tel" name="phone")
            div
              label.block.text-sm.font-medium.text-gray-700(for="message") Message
              input(class=".mt-1.block.w-full.rounded-md.border-gray-300.shadow-sm.focus:border-blue-300.focus:ring.focus:ring-blue-200.focus:ring-opacity-50" id="message" rows="4" name="message")
            div
              button(type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-300 hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500") Submit

    // Footer
    include ../templates/footer.pug
